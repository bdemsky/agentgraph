#/bin/bash

mkdir -p tests/results/

for i in tests.files.example tests.python.example tests.muttest.example tests.varsettest.example tests.vardicttest.example tests.retmut.example tests.mergeowner.example
do
echo ==========================================================
echo $i
echo ----------------------------------------------------------
if test -e tests/results/$i.result
then
python -m $i > tests/results/$i.txt
if diff -q tests/results/$i.txt tests/results/$i.result > /dev/null
then
echo "Test passed!"
else
echo "Test failed!"
fi
else
echo "Missing result!"
python -m $i | tee tests/results/$i.txt
fi

done
